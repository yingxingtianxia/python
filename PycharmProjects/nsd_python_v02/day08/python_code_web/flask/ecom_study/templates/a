CREATE TABLE `user` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `cname` varchar(100) NOT NULL DEFAULT '',
  `cpwd` varchar(100) NOT NULL DEFAULT '',
  `dtime` varchar(100) NOT NULL DEFAULT '',
  PRIMARY KEY (`id`),
  KEY `index_xm` (`cname`)
) ENGINE=InnoDB AUTO_INCREMENT=4 DEFAULT CHARSET=utf8;

